<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:label="Second Activity"
    android:orientation="vertical"
    tools:context="com.example.saaibi.androind_intent.SecondActivity">


    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinerGuess"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/colorBlanco"
        app:ms_arrowSize="20dp"
        app:ms_floatingLabelColor="@color/colorBlanco"
        app:ms_floatingLabelText="Seleccione un numero"
        app:ms_highlightColor="@color/colorPrimaryDark"
        app:ms_hint="Escoga tu numero"
        app:ms_multiline="true"
        app:ms_errorColor="@color/colorBlanco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/txtLifeCycle"
        android:layout_width="306dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Hola Mundo"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

</RelativeLayout>
